<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.fut" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_container</item>
        <item name="colorPrimaryVariant">@color/dark_background</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_background</item>
        <item name="colorSecondaryVariant">@color/dark_container</item>
        <item name="colorOnSecondary">@color/colorAccent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:navigationBarColor">@color/dark_background</item>

    </style>

    <style name="BottomNavigation" parent="Widget.Design.BottomNavigationView">
        <item name="android:background">@color/dark_container</item>
        <item name="itemIconTint">@color/neutral1</item>
        <item name="itemTextColor">@color/neutral1</item>
    </style>

    <style name="ButtonBorderNoBackground" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/my_border_button</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:textSize">@dimen/textsize_large</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonAccent" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/custom_rounded_background_button</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:textSize">@dimen/textsize_large</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="SearchViewFut" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>